<a class="btn btn-default" href="/tips/new">Add Tip</a>
{{#if isEmpty}}
<span id="emptymsg">No tips now. You can <a href="/tips/new">add a new one</a>.</span>    
{{else}}
<table class="table">
    <thead>
        <tr>
            <th class="col-sm-3">Title</th>
            <th class="col-sm-7">CreateDate</th>
            <th class="col-sm-2">Action</th>
        </tr>   
    </thead>
    <tbody>
        {{#each tips}}
        <tr>
            <td>{{title}}</td>
            <td>{{createDate}}</td>
            <td>
                <button class="btn btn-xs btn-success">Edit</button>
                <button class="btn btn-xs btn-danger">Remove</button>
            </td>
        </tr>
        {{/each}}   
    </tbody>
</table>
{{/if}}